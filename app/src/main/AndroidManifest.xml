<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.tud.shoppinglist">

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_shopping_basket"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_shopping_basket"
        android:supportsRtl="true"
        android:theme="@style/Theme.ShoppingList">
        <activity
            android:name=".CheckoutActivity"
            android:label="@string/checkoutTitle" />
        <activity
            android:name=".ListActivity"
            android:configChanges="keyboardHidden|orientation|screenSize|uiMode"
            android:label="@string/listTitle" />
        <activity
            android:name=".RegisterActivity"
            android:label="@string/registerTitle" />
        <activity
            android:name=".LoginActivity"
            android:exported="true"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>